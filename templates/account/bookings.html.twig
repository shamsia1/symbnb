{% extends 'base.html.twig'%}

{% block title %}Vos réservation {% endblock %}
{% block body %}
<div class="container">
    <h1>Mes réservation</h1>
    <div class="alert alert-info mt-5">
        <p>Retrouvez ci-dessous toutes vos réservation passées et a venir</p>

    </div>

    {% for booking in app.user.bookings %}
        {% set ad = booking.ad %}
        <div class="row mt-5">
            <div class="col-4">
                <img src="{{ ad.coverImage }}" alt="photo de l'announce{{ad.title}}" class="img-fluid">

                <div class="mt-3">
                    {% set comment = ad.commentFromAuthor(app.user)%}
                    {% if comment is not null %}
                        <strong>Note  donnée :</strong> {% include 'partials/rating.html.twig' with {'rating': comment.rating}%}
                    {% else %}
                        Vous n'avez pas encore donnée de note .
                        <a href="{{ path('booking_show', {'id': booking.id})}}#comment"
                        >Je donne mon avis !</a>
                    {% endif %}
                </div>
            </div>
            <div class="col-8">
                <h4>{{ad.title}}</h4>
                <p>
                    Réservation <strong>n°{{booking.id}}</strong><br>
                    du {{booking.startDate|date('d/m/Y')}} au {{booking.endDate|date('d/m/Y')}}
                    ({{booking.amount}} &euro;)
                </p>
                <a href="{{ path('booking_show', {'id': booking.id})}}" class="btn btn-info">

                    plus d'information
                </a>
            </div>
        </div>
    {% endfor %}
</div>


{% endblock %}
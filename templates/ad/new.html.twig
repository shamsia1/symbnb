{% extends "base.html.twig" %}

{% block title %}Creation d'une announce{% endblock %}
{% form_theme form 'ad/_collection.html.twig' %}

{% block body %}

    <div class="container">
        <h1 class="my-5">
            Créer une nouvelle announce
        </h1>
        {{form_start(form)}}
        <div class="row">
            <div class="col">
                <div class="alert alert-light">
                    <h2>Information générales</h2>
                    <hr>
                    {{form_row(form.title)}}
                    {{form_row(form.slug)}}
                    {{form_row(form.price)}}
                    {{form_row(form.rooms)}}
                </div>
                <div class="alert alert-light">
                    <h2>Détaills de l'announce</h2>
                    <hr>
                    {{form_row(form.introduction)}}
                    {{form_row(form.content)}}
                </div>
            </div>
            <div class="col">
                <div class="alert alert-light">
                    <h2>Image de l'annouce</h2>
                    <hr>
                    {{form_row(form.coverImage)}}
                    {{form_row(form.images)}}
                    
                </div>
            </div>
        </div>
       

        <div class="alert alert-success clearfix">
            <h2 class="alert alert-heading">Sauvgarder mon annonce</h2>
            <p>vous etes sur le point de créer votre annonce, nous super fier de vous!</p>
             <button type="submit" class="btn btn-primary float-right">
                 <i class="fas fa-check"></i>
                 Créer la nouvelle announce</button>
        </div>
       
        {{form_end(form)}}
    </div>
{% endblock %}

{% block javascripts %}
    <script src="/js/ad.js">
                 
    </script>       

{% endblock %}